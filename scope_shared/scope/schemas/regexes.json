{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://uwscope.org/schemas/regexes",
	"title": "Regexes",
	"type": "object",
	"$comment": "Club regexes together into a single property if they are not different.",
	"properties": {
		"birthdate": {
			"type": "string",
			"pattern": "^([0-9]{4})-(0[1-9]|1[0-2])-(0[1-9]|[12][0-9]|3[01])( 00:00:00|)$",
			"$comment": "Allows 'YYYY-MM-DD' and 'YYYY-MM-DD 00:00:00'"
		},
		"dateOfCancerDiagnosis": {
			"type": "string",
			"pattern": "^([0-9]{4})-(0[1-9]|1[0-2])-(0[1-9]|[12][0-9]|3[01])( 00:00:00|)$",
			"$comment": "Allows 'YYYY-MM-DD' and 'YYYY-MM-DD 00:00:00'"
		}
	}
}
